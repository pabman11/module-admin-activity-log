<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <!-- Primary activity table -->
    <table name="admin_activity" resource="default" engine="innodb">
        <column xsi:type="int" name="entity_id" unsigned="true" nullable="false" identity="true" comment="Primary key for the Table"/>
        <column xsi:type="varchar" name="username" nullable="false" length="40" default="" comment="Store admin username"/>
        <column xsi:type="varchar" name="name" nullable="false" length="64" default="" comment="Full name of admin"/>
        <column xsi:type="int" name="admin_id" unsigned="true" nullable="false" default="1" comment="Store id of admin user"/>
        <column xsi:type="smallint" name="store_id" unsigned="true" nullable="false" default="0" comment="Insert store id"/>
        <column xsi:type="varchar" name="scope" nullable="true" length="15" comment="Scope of activity"/>
        <column xsi:type="varchar" name="action_type" nullable="false" length="32" default="" comment="Action type like New, Edit, View, Delete, Mass Delete, etc"/>
        <column xsi:type="varchar" name="remote_ip" nullable="false" length="40" default="" comment="IP address of logged in admin user"/>
        <column xsi:type="varchar" name="forwarded_ip" nullable="true" length="40" comment="Real IP address if visitor used proxy"/>
        <column xsi:type="text" name="user_agent" nullable="false" comment="Store browser's user agent"/>
        <column xsi:type="varchar" name="module" nullable="false" length="50" default="" comment="Name of module in which action performed"/>
        <column xsi:type="varchar" name="fullaction" nullable="false" length="200" default="" comment="Full Action Name"/>
        <column xsi:type="varchar" name="item_name" nullable="false" length="255" default="" comment="Name of item which is affected like product, user, order, etc"/>
        <column xsi:type="varchar" name="item_url" nullable="true" length="255" default="" comment="Url of item if possible"/>
        <column xsi:type="varchar" name="item_path" nullable="true" length="255" default="" comment="Path of item if possible"/>
        <column xsi:type="tinyint" name="is_revertable" nullable="true" default="0" comment="0 = Not able revert activity, 1= Able to revert activity"/>
        <column xsi:type="varchar" name="revert_by" nullable="true" length="64" default="" comment="Name of admin user who reverted the activity"/>
        <column xsi:type="timestamp" name="created_at" nullable="false" default="CURRENT_TIMESTAMP" comment="The date when the activity was created"/>
        <column xsi:type="timestamp" name="updated_at" nullable="false" default="CURRENT_TIMESTAMP" on_update="true" comment="The date when the activity was modified or reverted"/>

        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="entity_id"/>
        </constraint>

        <index referenceId="ADMIN_ACTIVITY_ADMIN_ID" indexType="btree">
            <column name="admin_id"/>
        </index>
        <index referenceId="ADMIN_ACTIVITY_STORE_ID" indexType="btree">
            <column name="store_id"/>
        </index>
    </table>

    <!-- Activity log table for detailed field changes -->
    <table name="admin_activity_log" resource="default" engine="innodb">
        <column xsi:type="int" name="entity_id" unsigned="true" nullable="false" identity="true" comment="Primary key for the Table"/>
        <column xsi:type="int" name="activity_id" unsigned="true" nullable="true" comment="Entity id of admin_activity table"/>
        <column xsi:type="varchar" name="field_name" nullable="false" length="255" default="" comment="Name of field which is affected"/>
        <column xsi:type="text" name="old_value" nullable="false" comment="Old value of field"/>
        <column xsi:type="text" name="new_value" nullable="false" comment="New value of field"/>

        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="entity_id"/>
        </constraint>

        <constraint xsi:type="foreign" referenceId="ADMIN_ACTIVITY_LOG_ACTIVITY_ID_ADMIN_ACTIVITY_ENTITY_ID"
                    table="admin_activity_log" column="activity_id"
                    referenceTable="admin_activity" referenceColumn="entity_id" onDelete="CASCADE"/>

        <index referenceId="ADMIN_ACTIVITY_LOG_ACTIVITY_ID" indexType="btree">
            <column name="activity_id"/>
        </index>
    </table>

    <!-- Activity detail table for revert process -->
    <table name="admin_activity_detail" resource="default" engine="innodb">
        <column xsi:type="int" name="entity_id" unsigned="true" nullable="false" identity="true" comment="Primary key for the Table"/>
        <column xsi:type="int" name="activity_id" unsigned="true" nullable="false" comment="Entity id of admin_activity table"/>
        <column xsi:type="varchar" name="model_class" nullable="false" length="255" default="" comment="Name of field which is affected"/>
        <column xsi:type="int" name="item_id" nullable="true" comment="Old value of field"/>
        <column xsi:type="varchar" name="status" nullable="false" length="16" default="" comment="Status of revert process"/>
        <column xsi:type="text" name="response" nullable="false" comment="Error message faced during revert process"/>

        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="entity_id"/>
        </constraint>

        <constraint xsi:type="foreign" referenceId="ADMIN_ACTIVITY_DETAIL_ACTIVITY_ID_ADMIN_ACTIVITY_ENTITY_ID"
                    table="admin_activity_detail" column="activity_id"
                    referenceTable="admin_activity" referenceColumn="entity_id" onDelete="CASCADE"/>

        <index referenceId="ADMIN_ACTIVITY_DETAIL_ACTIVITY_ID" indexType="btree">
            <column name="activity_id"/>
        </index>
    </table>

    <!-- Login activity table for tracking login/logout -->
    <table name="admin_login_log" resource="default" engine="innodb">
        <column xsi:type="int" name="entity_id" unsigned="true" nullable="false" identity="true" comment="Primary key for the table"/>
        <column xsi:type="varchar" name="username" nullable="false" length="40" default="" comment="Admin username"/>
        <column xsi:type="varchar" name="name" nullable="false" length="64" default="" comment="Full name of admin"/>
        <column xsi:type="varchar" name="remote_ip" nullable="false" length="40" default="" comment="IP address of logged in admin user"/>
        <column xsi:type="varchar" name="forwarded_ip" nullable="false" length="40" default="" comment="Real IP address if visitor used proxy"/>
        <column xsi:type="text" name="user_agent" nullable="false" comment="Store browser's user agent"/>
        <column xsi:type="varchar" name="type" nullable="false" length="8" default="" comment="Is it Login/Logout?"/>
        <column xsi:type="boolean" name="status" nullable="true" comment="0 = Failed, 1= Success"/>
        <column xsi:type="text" name="remarks" nullable="false" comment="Reason for failure"/>
        <column xsi:type="timestamp" name="created_at" nullable="false" default="CURRENT_TIMESTAMP" comment="The date when the activity was created"/>

        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="entity_id"/>
        </constraint>
    </table>
</schema>
